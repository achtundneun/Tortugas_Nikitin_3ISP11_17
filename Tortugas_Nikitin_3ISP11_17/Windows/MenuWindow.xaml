<Window x:Class="Tortugas_Nikitin_3ISP11_17.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tortugas_Nikitin_3ISP11_17.Windows"
        mc:Ignorable="d"
        Title="MenuWindow" 
        Height="1194" 
        Width="834">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Меню"
                       HorizontalAlignment="Center"
                       FontSize="35"
                       FontFamily="Helvetica"
                       LineHeight="32"
                       FontStyle="Normal"
                       FontWeight="Bold"
                       FontStretch="Normal"
                       Foreground="Black"/>

        <WrapPanel x:Name="wrapPanel" Grid.Row="1"
                   VerticalAlignment="Center">
            <TextBlock Text="Поиск"
                       Margin="20 0 10 0"
                       FontSize="18"
                       FontFamily="Helvetica"
                       FontStyle="Normal"
                       FontWeight="Bold"
                       FontStretch="Normal"
                       Foreground="Black"/>

            <TextBox x:Name="SearchBookName"
                     Width="150"
                     FontSize="18"
                     />

            <ComboBox x:Name="cmbSort"
                      Width="150"
                      Margin="20 0 0 0"
                      />
        </WrapPanel>
        <ListView>
            <GridView>
                <GridViewColumn Header="LastName" DisplayMemberBinding="{Binding Path=TitleBook}"/>
                <GridViewColumn Header="DateBith" DisplayMemberBinding="{Binding Path=IdAuthor}"/>
                <GridViewColumn Header="Phone" DisplayMemberBinding="{Binding Path=IdPublishingHouse}"/>
                <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Path=YearOfPublishing}"/>
                <GridViewColumn Header="DateLastVisit" DisplayMemberBinding="{Binding Path=NumberOfPages}"/>
                <GridViewColumn Header="CountVisit" DisplayMemberBinding="{Binding Path=IdGenre}"/>
            </GridView>
           </ListView>

            <Button x:Name="btnExit"
                Content="Назад"
                Grid.Row="4"
                Width="100"
                Height="30"
                FontFamily="Helvetica"
                Foreground="Black"
                HorizontalAlignment="Left"
                Margin="10 0 0 0"
                FontSize="20"
                Click="btnExit_Click"/>

        <Button  x:Name="btnAddBook"
                 Content="Добавить"
                 FontSize="20"
                 Margin="0 0 10 0"
                 HorizontalAlignment="Right"
                 Width="100"
                 Height="30"
                 FontFamily="Helvetica"
                 Foreground="Black"
                 Grid.Row="4"
                />
    </Grid>
</Window>
